@model IEnumerable<PS.BOL.Attendence>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/attendence/attendence-list.css" rel="stylesheet"/>
<div class="container">
    <br />
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
        @TempData["ErrorMessage"]
        </div>
    }
    <h1 class="one">Attendence List</h1>
    <br />
    <p>
       <a asp-action="CreateorEdit" class="create-btn">Create New</a>
    </p>
    <table class="table table-borderd table-hover table-striped">
            <thead>
               <tr>
                   <th>Employee Name</th>
                   <th>
                    @Html.DisplayNameFor(model => model.Date)
                   </th>
                   <th>
                    @Html.DisplayNameFor(model => model.Batch)
                   </th>
                   <th>
                    @Html.DisplayNameFor(model => model.Section)
                   </th>
                   <th>
                    @Html.DisplayNameFor(model => model.Lecture)
                   </th>
                   <th>
                    @Html.DisplayNameFor(model => model.Status)
                   </th>
                   <th>Actions</th>
               </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                       <td>
                        @Html.DisplayFor(modelItem => item.Employee.Name)
                       </td>
                       <td>
                        @Html.DisplayFor(modelItem => item.Date)
                       </td>
                       <td>
                        @Html.DisplayFor(modelItem => item.Batch)
                       </td>
                       <td>
                        @Html.DisplayFor(modelItem => item.Section)
                       </td>
                       <td>
                        @Html.DisplayFor(modelItem => item.Lecture)
                       </td>
                       <td>
                        @Html.DisplayFor(modelItem => item.Status)
                       </td>
                       <td>
                           <a asp-action="CreateorEdit" class="color" asp-route-id="@item.AttId">Edit |</a>
                           <a asp-action="Details" class="color" asp-route-id="@item.AttId">Details</a>
                       </td>
                    </tr>
                }
            </tbody>
        
    </table>
</div>

