@model PS.BOL.Department
@{
    ViewData["Title"] = "CreateorEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/site.js"></script>

<link href="~/css/department/department-create-edit.css" rel="stylesheet"/>

@if (TempData["ErrorMessage"] != null) 
{
        <div class="alert alert-danger">
           @TempData["ErrorMessage"]
        </div>
}
<div class="container">
    <br />
    @{
        string titleText = string.Empty;
        if (Model.DeptId > 0) titleText = "Edit Department";
        else titleText = "Create Department";
    }
    <h1 class="text-center">@titleText</h1>
    <br />
   <div>
        <script>
           function goBack() {
              window.location.href='/Department';
           }
        </script>
        <button type="button" class="btn btn-success" onclick="goBack()">Back To List</button>
    
   </div>
   <br />
   <hr />
   <div class="row">
    <div class="col-md-4">
      <form asp-action="CreateorEdit">
        <input type="hidden" asp-for="DeptId" />
        <div class="row row-1">
            <div class="col-md-2">
             <label asp-for="DeptName" class="control-label"></label>
            </div>
            <div class="col-md-6">
               <input asp-for="DeptName" class="form-control" />
               <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>
        </div>
        <br />
         <div class="row row-1">
            <div class="col-md-2">
             <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-md-6">
               <input asp-for="Description" class="form-control" />
               <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <br />
                @{
                    string buttonText = string.Empty;
                    if (Model.DeptId > 0) buttonText = "Update";
                    else buttonText = "Create";
                 }
                 <button type="submit" id="btnSave" class="btn btn-primary">@buttonText</button>
      </form>
      <hr />
    </div>
   </div>
</div>
<script>
      $(document).ready(function () {
       $('#btnSave').click(function() {
         notyf.open ({ type:'success', message:'Department is saved.' });
       });
      });
</script>

