<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/jquery/jquery.min.js"></script>

    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>

    <link href="~/notyf/notyf.min.css" rel="stylesheet" />

    <script src="~/notyf/notyf.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg  navbar-light border-bottom" style="background:#008080;">
        <div class="container-fluid">
            <a class="navbar-brand" href="" style="color:#ffff">Employee Payroll System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav" style="margin-left:150px;" >
                  <li class="nav-item">
                   <a class="nav-link" asp-action="Index" asp-controller="Home" style="color:#fff;margin-left:10px;">Home</a>
                  </li>
                  <li class="nav-item">
                   <a class="nav-link" asp-action="Index" asp-controller="Department" style="color:#fff;margin-left:10px;">Department</a>
                  </li>
                  <li class="nav-item">
                   <a class="nav-link" asp-action="Index" asp-controller="Employee" style="color:#fff;margin-left:10px;">Employee</a>
                  </li>
                  <li class="nav-item">
                   <a class="nav-link" asp-action="Index" asp-controller="Attendence" style="color:#fff;margin-left:10px;">Attendence</a>
                  </li>
                  <li class="nav-item">
                   <a class="nav-link" asp-action="Index" asp-controller="Leave" style="color:#fff;margin-left:10px;">Leave</a>
                  </li>
                  <li class="nav-item">
                   <a class="nav-link" asp-action="Index" asp-controller="Salary" style="color:#fff;margin-left:10px;">Salary</a>
                  </li>
              </ul>          
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
